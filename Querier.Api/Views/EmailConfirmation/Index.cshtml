@{
    ViewData["Title"] = "Confirmation d'email";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-center">Confirmation d'email</h2>
                    
                    @if (ViewData["Error"] != null)
                    {
                        <div class="alert alert-danger">
                            @ViewData["Error"]
                        </div>
                    }

                    <form method="post">
                        <input type="hidden" name="Token" value="@ViewData["Token"]" />
                        <input type="hidden" name="Email" value="@ViewData["Email"]" />
                        
                        <div class="form-group">
                            <label>Nouveau mot de passe</label>
                            <input type="password" class="form-control" name="Password" required 
                                   minlength="12" />
                            <small class="form-text text-muted">
                                Le mot de passe doit contenir au moins 12 caractères, incluant des majuscules,
                                minuscules, chiffres et caractères spéciaux.
                            </small>
                        </div>

                        <div class="form-group mt-3">
                            <label>Confirmer le mot de passe</label>
                            <input type="password" class="form-control" name="ConfirmPassword" required />
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary">
                                Confirmer mon email et définir mon mot de passe
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 